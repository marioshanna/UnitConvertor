<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unitconvertor">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_compare_arrows_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_compare_arrows_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.UnitConvertor">
        <activity
            android:name=".HistoryArrayList"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ConvertorActivity"
            android:exported="false" />
        <activity
            android:name=".About"
            android:exported="true" />
        <activity
            android:name=".RatesActivity"
            android:exported="true" />
        <activity
            android:name=".SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".LogInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".NotifactionReceiver"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".NotificationIntentService"
            android:enabled="true"
            android:exported="false" />

        <service
            android:name=".MusicService"
            android:enabled="true"
            android:exported="true" />
    </application>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

</manifest>